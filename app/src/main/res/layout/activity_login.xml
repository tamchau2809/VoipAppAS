<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" 
    android:orientation = "vertical" >"
    
    <TextView
        android:id="@+id/tvkoxai1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Tên người dùng:"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/setup_username"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:singleLine="true"
        android:hint="cocnhailk..."
        android:textSize="25sp" >

        <requestFocus android:layout_width="match_parent" />

    </EditText>
    
    <TextView
        android:id="@+id/tvkoxai2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Mật Khẩu:"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <EditText
        android:id="@+id/setup_password"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="Mật Khẩu"
        android:textSize="25sp"
        android:layout_gravity="center"
        android:inputType="textPassword"
        android:singleLine="true"/>

    <TextView
        android:id="@+id/tvkoxai3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:text="Tên Miền:"
        android:textSize="25sp"
        android:textAppearance="?android:attr/textAppearanceLarge" />
    
    <EditText
        android:id="@+id/setup_domain"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:hint="sipcloud.worldfone.vn"
        android:textSize="25sp"
        android:singleLine="true"
        android:layout_gravity="center" />
	
    <LinearLayout 
        android:layout_width="match_parent" 
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp">
        
        <Button
        android:id="@+id/btnCancel"
        style="?android:attr/buttonStyle"
        android:textStyle="bold"
        android:layout_weight="1"
        android:layout_marginLeft="10dp"
        android:textSize="25sp"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:text="Hủy" />
        
        <Button
        android:id="@+id/btnOkay"
        style="?android:attr/buttonStyle"
        android:textStyle="bold"
        android:layout_width="160dp"
        android:layout_marginRight="10dp"
        android:textSize="25sp"
        android:layout_weight="2"
        android:layout_height="60dp"
        android:text="Xong" />
    </LinearLayout>
    

    
    
</LinearLayout>